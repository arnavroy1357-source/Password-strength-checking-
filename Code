# 🔐 PASSWORD STRENGTH CHECKER
# Created by Arnav Roy

import re   # Regular expressions library

print("=======================================")
print("       🔒 PASSWORD STRENGTH CHECKER     ")
print("=======================================")

# Taking password input
password = input("Enter your password: ")

# Initialize score
score = 0

# Check length
if len(password) >= 8:
    score += 1
else:
    print("❌ Password should be at least 8 characters long.")

# Check for lowercase letters
if re.search(r"[a-z]", password):
    score += 1
else:
    print("❌ Add at least one lowercase letter.")

# Check for uppercase letters
if re.search(r"[A-Z]", password):
    score += 1
else:
    print("❌ Add at least one uppercase letter.")

# Check for digits
if re.search(r"\d", password):
    score += 1
else:
    print("❌ Add at least one number.")

# Check for special characters
if re.search(r"[!@#$%^&*(),.?\":{}|<>]", password):
    score += 1
else:
    print("❌ Add at least one special character (!,@,#,$, etc).")

# Evaluate overall strength
print("\n---------------------------------------")

if score == 5:
    print("✅ Strong Password 💪")
elif score >= 3:
    print("⚠️  Medium Password — try adding more variety!")
else:
    print("❌ Weak Password — too easy to guess!")

print("---------------------------------------")
print(f"Your password strength score: {score}/5")
